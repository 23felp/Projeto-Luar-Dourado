$stmt = $conn->prepare($sql);
$stmt->bind_param("i", $email);
$stmt->execute();
$result = $stmt->get_result();
$dados = $result->fetch_assoc();

$email = $dados['email'] ?? 'Email não disponível';
$foto_nome = [
    'foto_nome' => $dados['foto_nome'] ?? 'imagens/default.png'
